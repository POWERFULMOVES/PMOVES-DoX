# PMOVES.AI Tier Environment: Agent (dotenv format)
# For use with Docker Compose env_file directive
# Shell version with exports: env.tier-agent.sh

# ============================================================================
# Agent Tier Configuration
# ============================================================================

TIER=agent

# Agent limits
MAX_CONCURRENT_AGENTS=50
MAX_TASKS_PER_AGENT=10
AGENT_TIMEOUT_MS=300000
AGENT_IDLE_TIMEOUT_MS=60000

# Task queue configuration
TASK_QUEUE_SIZE=1000
TASK_RETRY_MAX=3
TASK_RETRY_DELAY_MS=1000

# Tool execution
TOOL_TIMEOUT_MS=60000
MAX_TOOL_OUTPUT_SIZE=1048576

# MCP (Model Context Protocol) configuration
MCP_ENABLED=true
MCP_TIMEOUT_MS=30000
MCP_MAX_MESSAGE_SIZE=10485760

# Agent state persistence
STATE_PERSISTENCE_ENABLED=true
STATE_BACKEND=supabase

# LLM configuration for agents
DEFAULT_MODEL=claude-sonnet-4-5
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=4096

# Prompt management
PROMPT_CACHE_ENABLED=true
PROMPT_CACHE_SIZE=1000
PROMPT_CACHE_TTL=3600

# Archon-specific (if using Archon)
ARCHON_PROMPT_BACKEND=supabase
ARCHON_FORM_SCHEMA_PATH=/forms
