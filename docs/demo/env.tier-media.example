# PMOVES Tier: Media Services
# Services: pmoves-yt, ffmpeg-whisper, media-video, media-audio
# Principle: MinIO for storage, NATS for events, Supabase for metadata

# ----- NATS (Event Bus) -----
NATS_URL=nats://nats:4222

# ----- MinIO (Media Storage) -----
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=assets
MINIO_OUTPUT_BUCKET=outputs

# ----- Supabase (Metadata) -----
SUPA_REST_URL=http://host.docker.internal:65421/rest/v1
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ----- PMOVES.YT -----
YT_CHANNEL_CHECK_INTERVAL=3600
YT_INGEST_URL=http://pmoves-yt:8077/yt/ingest

# ----- FFmpeg-Whisper -----
WHISPER_MODEL=small
WHISPER_LANGUAGE=en

# ----- Media Analysis -----
YOLO_MODEL=yolov8n.pt
YOLO_CONFIDENCE=0.25
FRAME_SAMPLE_RATE=5

# ----- Indexer Namespace -----
INDEXER_NAMESPACE=pmoves
